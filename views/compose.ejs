
<%- include("partials/header"); -%>
<div class="jumbotron">
    <h1>Compose</h1>
    <form action="/compose" method="post">
        <div class="form-group">
            <label for="title">Post Title</label>
            <input type="text" class="form-control" id="title" placeholder="Title" name="post_title" required>            
        </div>
        <div class="form-group">
            <label for="content">Post Content</label>
            <textarea class="form-control" name="post_content" id="content" cols="30" rows="10" required></textarea>
                      
        </div>          
        <button type="submit" class="btn btn-primary">Publish</button>
    </form>
</div>
<%- include("partials/footer"); -%>